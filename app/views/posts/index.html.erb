<h1>Post</h1>
<% i=0 %>
<ol>
<% while i<@post.length do %>
<li><%= @post[i].title %>
<br>
<%= @post[i].content %>
<br>
<% if @signed_in_user%>
<% if @signed_in_user.id == @post[i].user_id%>
<%= link_to 'Delete', posts_destroy_path(@post[i]), method: :delete, 
                         data: { confirm: 'Are you sure?' } %>
<%end %>
<%end %>                      
</li>

<% i+=1 %>
<% end %>
</ol>
<% if @signed_in_user%>
	<br>
	<%= link_to 'Create Post' , posts_new_path , method: :get %>
	<br>
	<%= link_to 'Sign Out' , users_sign_out_path , method: :get %>
<% else%>
	<br>
	<%= link_to 'Sign In' , users_sign_in_path , method: :get %>
	<br>
	<%= link_to 'Sign Up' , users_sign_up_path , method: :get %>
<%end%>